n = int(input())
ramen = list(map(int, input().split()))

dp = [0] * n
dp[0] = 3 * ramen[0]

if n >= 2:
    dp[1] = min(dp[0] + 3 * ramen[1], 5)

if n >= 3:
    dp[2] = min(dp[1] + 3 * ramen[2], dp[0] + 3 * ramen[1] + 4 * ramen[2], 8)

if n >= 4:
    for i in range(3, n):
        dp[i] = min(dp[i-1] + 3 * ramen[i], dp[i-2] + 5, dp[i-3] + 7 + 2 * ramen[i-1] + 2 * ramen[i])

print(dp[-1])
